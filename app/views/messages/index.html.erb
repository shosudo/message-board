<%#  <%= code -> do a code and set a result as string %>
<%#  <%  code -> only do a code %>
<%#  <%# is used for comment %>

<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info col-sm-1"><%= message.name %></span>
            <span class="col-sm-7"><%= message.body %></span>
            <span class="col-sm-2">(<%= link_to "Edit", edit_message_path(message) %>)</span>
            <%# link_to リンク名, リンクURL %>
            <%# edit_message_path(message) => URL helper which create a </messages/:id/edit>. 引数(message)の中からmessage.idを取得 %>
            <%# link_to "Edit",edit_message_path(message) = <a href="/messages/1/edit">Edit</a> %>
            <br>
        <% end %>
    </div>
</div>

<div class="form-horizontal" role="form">
    <%#部分テンプレートの読み込み.app/views/messages/_form.html.erb %>
   <%= render 'form' %>
</div>