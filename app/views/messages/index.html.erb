<%#  <%= code -> do a code and set a result as string %>
<%#  <%  code -> only do a code %>
<%#  <%# is used for comment %>

<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>

<%= form_for(@message) do |f| %>
<%# form_for is called form_helper and it automatically generate a form to generate a model and edit it %>
<%# @message is a Model "Message" which is generated at messages_controller's index method(action) %>
<%# generated form tag => <form class="new_message" id="new_message" action="/messages" accept-charset="UTF-8" method="post"> %>
    名前:
    <%= f.text_field :name %>
    <%# :name=属性名 %>
    <%# <input type="text" name="message[name]" id="message_name" /> %>
    
    内容:
    <%= f.text_field :body %>
    
    <%= f.submit %>
    <%# <input type="submit" name="commit" value="Create Message" /> %>
<% end %>