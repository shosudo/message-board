<%#  <%= code -> do a code and set a result as string %>
<%#  <%  code -> only do a code %>
<%#  <%# is used for comment %>

<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%= message.body %>
            <br>
        <% end %>
    </div>
</div>

<div class="form-horizontal" role="form">
    <%= form_for(@message) do |f| %>
    <%# form_for is called form_helper and it automatically generate a form to generate a model and edit it %>
    <%# @message is a Model "Message" which is generated at messages_controller's index method(action) %>
    <%# generated form tag => <form class="new_message" id="new_message" action="/messages" accept-charset="UTF-8" method="post"> %>
        <div class="form-group">
            <div class="col-sm-1">
                <%= f.label :name, "Name:", class:"form-control", %>
                <%# ???元々name:だけだったものを、f.lableに変更。問題無し?+border消せないか??? %>
            </div>
            <div class="col-sm-5">
                <%= f.text_field :name, :placeholder => "Enter your name", class:"form-control" %>
                <%# :name=属性名 %>
                <%# form-controlをつけるとBootstrapのスタイルを適応 %>
                <%# <input type="text" name="message[name]" id="message_name" /> %>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-1">
                <%= f.label :text, "Text:", class:"form-control" %>
            </div>
            <div class="col-sm-5">
                <%= f.text_area :body, :placeholder => "Enter a text", cols:"40", class:"form-control" %>
                <%# <input type="textarea" name="message[body]" id="message_body" /> %>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-1">
            </div>
            <div class="col-sm-5">
                <%= f.submit "Tweet", class: "btn btn-primary" %>
                <%# <input type="submit" name="commit" value="Create Message" /> %>
            </div>
        </div>
    <% end %>
</div>