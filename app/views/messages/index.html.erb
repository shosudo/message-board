<%#  <%= code -> do a code and set a result as string %>
<%#  <%  code -> only do a code %>
<%#  <%# is used for comment %>

<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each_with_index do |message,i| %>
        <%# @messagesの配列を取得していく時に、index(i)も取得する。iは0から始まる。 %>
                <hr class="style-one">
                <br>
                <span class="label label-info col-sm-1 text--center"><%= message.name %></span>
                <span class="col-sm-8 text--center"><%= message.body %></span>
                <%= link_to "Edit", edit_message_path(message), class: "btn btn-primary col-sm-1 btn-sm edit--expand" %>
                <%= link_to "Delete", message, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-primary btn-sm col-sm-1 delete--expand" %>
                <%# link_to リンク名, リンクURL %>
                <%# edit_message_path(message) => URL helper which create a </messages/:id/edit>. 引数(message)の中からmessage.idを取得 %>
                <%# link_to "Edit",edit_message_path(message) = <a href="/messages/1/edit">Edit</a> %>
                <br>
            <% if i == @messages.length - 1 %>
            <%# ループ処理の最後だけ処理を行う %>
                <hr class="style-one">
            <% end %>
        <% end %>
    </div>
</div>

<div class="form-horizontal" role="form">
    <%#部分テンプレートの読み込み.app/views/messages/_form.html.erb %>
   <%= render 'form' %>
</div>