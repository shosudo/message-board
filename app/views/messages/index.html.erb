<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info col-sm-1"><%= message.name %></span>
            <span class="col-sm-9"><%= message.body %></span>
            <br>
        <% end %>
    </div>
</div>

<div class="form-horizontal" role="form">
    <%#部分テンプレートの読み込み.app/views/messages/_form.html.erb %>
   <%= render 'form' %>
</div>